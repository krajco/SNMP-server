extends layout

block layout-content
  div.container-shadow.main-container
    div.row
      div.col
        select.form-control
          option(value="" disabled selected hidden) Select type ..
          option(value="scalar") Scalar
          option(value="table") Table
      div.col    
        select(id="types" class="form-control" onchange="reloadSensors()")
          option(value="" disabled selected hidden) Select sensors ..
          each sensor in sensors
            option(value=sensor) #{sensor.entity_id}

    div.container-form.container-shadow
      form#mib_object
        div.row
          div.col
            input(type="text" class="form-control" placeholder="MIB object name")
      div.row
        button.btn.btn-info(onclick="newElementMibObject('', '')") New Element
      div.row
        button.btn.btn-success Finish!
